  .toggle.off { background: {% if isDark %}#2A2A2A{% else %}#ddd{% endif %}; }
  .toggle-dot { position: absolute; top: 2px; width: 18px; height: 18px; border-radius: 9px; }
  .toggle.on .toggle-dot { right: 2px; background: {% if isDark %}#BFFF00{% else %}#4A8500{% endif %}; }
  .toggle.off .toggle-dot { left: 2px; background: {% if isDark %}#555{% else %}#aaa{% endif %}; }

  .bottom-links { margin: 0 16px; padding: 8px 0; }
  .bl-row { padding: 12px 4px; border-bottom: 1px solid {% if isDark %}#111{% else %}#F0F0EB{% endif %}; font-family: var(--font-body); font-size: 13px; display: flex; justify-content: space-between; align-items: center; }
  .bl-row:last-child { border-bottom: none; }
  .bl-row.normal { color: #888; }
  .bl-row.danger { color: {% if isDark %}#FF3B3B{% else %}#DC1E3C{% endif %}; }
  .bl-arrow { font-size: 11px; color: {% if isDark %}#444{% else %}#ccc{% endif %}; }
