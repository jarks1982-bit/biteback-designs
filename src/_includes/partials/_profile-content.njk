  .sr-left { display: flex; align-items: center; gap: 10px; }
  .sr-icon { font-size: 16px; opacity: 0.7; }
  .sr-label { font-family: var(--font-body); font-size: 14px; color: {% if isDark %}#ccc{% else %}#444{% endif %}; }
