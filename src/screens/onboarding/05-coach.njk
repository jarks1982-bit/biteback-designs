<style>
  .coach-pick-title {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 24px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-primary);
    margin-top: 20px;
  }
  .coach-pick-subtitle {
    font-family: var(--font-body);
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: 4px;
    margin-bottom: 20px;
  }
  .coach-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
    overflow-y: auto;
    flex: 1;
  }
  .coach-card {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 14px;
    background: var(--card-bg);
    border: 2px solid var(--card-border);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all 0.2s;
    position: relative;
  }
  .coach-card:hover {
    border-color: var(--text-tertiary);
  }
  .coach-card.selected {
    border-color: var(--clutch);
    box-shadow: 0 0 20px rgba(191, 255, 0, 0.1);
  }
  .coach-card.locked {
    opacity: 0.5;
    cursor: default;
  }
  .coach-card-avatar-placeholder {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 700;
    color: #000;
  }
  .coach-card-info {
    flex: 1;
    min-width: 0;
  }
  .coach-card-name {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
  }
  .coach-card-tag {
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--text-tertiary);
    margin-top: 1px;
  }
  .coach-card-roast {
    font-family: var(--font-body);
    font-size: 13px;
    color: var(--text-secondary);
    margin-top: 6px;
    font-style: italic;
  }
  .coach-card-lock {
    position: absolute;
    top: 10px;
    right: 10px;
  }
  .pro-badge {
    font-family: var(--font-mono);
    font-size: 9px;
    letter-spacing: 1px;
    padding: 3px 8px;
    border-radius: 6px;
    background: rgba(255,215,0,0.08);
    color: #FFD700;
    border: 1px solid rgba(255,215,0,0.15);
  }
  .upgrade-note {
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--text-tertiary);
    text-align: center;
    margin-top: 12px;
  }
</style>
<div class="coach-pick-title">PICK YOUR COACH</div>
<div class="coach-pick-subtitle">They'll roast you into compliance.</div>
<div class="coach-list">
  {% for c in coaches %}
    <div class="coach-card {% if c.id == 'bri' %}selected{% endif %} {% if c.tier == 'premium' %}locked{% endif %}">
      <div class="coach-card-avatar-placeholder" style="background: {{ c.color_primary }};">
        {{ c.emoji }}
      </div>
      <div class="coach-card-info">
        <div class="coach-card-name" style="color: {{ c.color_primary }};">{{ c.name }}</div>
        <div class="coach-card-tag">{{ c.archetype }}</div>
        <div class="coach-card-roast">"{{ c.sample_roasts[0].line }}"</div>
      </div>
      {% if c.tier == "premium" %}
        <div class="coach-card-lock">
          <span class="pro-badge">PRO</span>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>
<div class="upgrade-note">Upgrade anytime in settings</div>
